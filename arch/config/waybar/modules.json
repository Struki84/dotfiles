{
  "cpu": {
    "format": "\uf2db  {usage}%",
    "tooltip": true,
    "tooltip-format": "CPU Usage: {usage}%\nLoad: {load}",
    "interval": 2,
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "temperature#cpu": {
    "thermal-zone": 0,
    "format": "\uf2c9 {temperatureC}°C",
    "critical-threshold": 80,
    "tooltip": true,
    "tooltip-format": "CPU Temperature: {temperatureC}°C",
    "interval": 2
  },
  "memory": {
    "format": "<span font_family=\"JetBrainsMono Nerd Font\">\ue2a0</span> {used:0.1f}G",
    "tooltip": true,
    "tooltip-format": "Memory: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G",
    "interval": 2,
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "disk": {
    "format": "󰋊  {used}",
    "path": "/",
    "tooltip": true,
    "tooltip-format": "Disk Usage: {used} / {total}\nFree: {free} ({percentage_free}% free)",
    "interval": 30,
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "network#speed": {
    "format": "󰇚  {bandwidthDownBits} 󰕒  {bandwidthUpBits}",
    "format-disconnected": "󰌙 Disconnected",
    "tooltip": true,
    "tooltip-format": "Total Down: {bandwidthDownBytes}\nTotal Up: {bandwidthUpBytes}",
    "interval": 2
  },
  "custom/gpu-temp": {
    "exec": "nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader,nounits",
    "format": "󰢮  {}°C",
    "interval": 2,
    "tooltip": true
  },
  "hyprland/window": {
    "format": "{title}",
    "max-length": 100,
    "separate-outputs": true
  },
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "active": "◉",
      "default": "○",
      "empty": "○"
    },
    "persistent-workspaces": {
      "*": [
        1,
        2,
        3,
        4,
        5,
        6
      ]
    },
    "on-click": "activate",
    "sort-by-number": true,
    "active-only": false,
    "mirror": "*"
  },
  "clock": {
    "format": "{:%a %d %B %H:%M}",
    "on-click": "swaync-client -t"
  },
  "custom/notifications": {
    "tooltip": false,
    "format": "",
    "on-click": "swaync-client -t -sw",
    "escape": true
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰖁",
    "format-icons": {
      "default": [
        "",
        "",
        ""
      ]
    },
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 16,
    "icon-theme": "Vivid-Glassy-Dark-Icons",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "all-outputs": true,
    "markup": true,
    "sort-by-app-id": true
  }
}
