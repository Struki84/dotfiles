#!/bin/bash
slot=$1

# Get current workspace ID of focused window
current_ws=$(hyprctl activewindow -j | jq .workspace.id)

# Determine monitor and slots
if [[ $current_ws == 1 || $current_ws == 3 || $current_ws == 5 ]]; then
    slots=(1 3 5)
else
    slots=(2 4 6)
fi

# Target workspace
target_ws=${slots[$((slot-1))]}

# Move silently
hyprctl dispatch movetoworkspacesilent $target_ws
